generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model Settings {
  id                Int      @id @default(autoincrement())
  currentDayType    String
  autoDayTypeEnabled Boolean  @default(false)
  onSiteDays        String   @default("")
  remoteDays        String   @default("")
  tuesdayMode       String   @default("FIXED_ON_SITE")
  tuesdayOddWeekType String  @default("ON_SITE")
  tuesdayEvenWeekType String @default("REMOTE")
  adminPasswordHash String
  schoolName        String
  managerName       String
  updatedAt         DateTime @updatedAt
}

model Period {
  id        Int    @id @default(autoincrement())
  dayType   String
  order     Int
  name      String  @default("")
  startTime String
  endTime   String

  @@unique([dayType, order])
}

model Term {
  id        Int      @id @default(autoincrement())
  name      String
  startDate DateTime
  endDate   DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
